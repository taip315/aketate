<%= render partial: "shared/header" %>
<div class = "main">
    <div class = "main-wrapper">
      <div class = "shop-following-wrapper">
        <h1>フォロー中のshop一覧</h1>
        <% @memberships.each do |membership|  %>
        <div class = "shops">
          <a href = "/users/shops/<%=membership.shop_id%>" ></a>
          <div class = "user-icon">画像</div>
          <div class = "shop-content">
            <div class = "shop-info-search">
              <div class = "shop-name-search"><%= membership.shop[:shop_name]%></div>
              <div class = "station-genre">
                <div class = "station-search"><%= membership.shop[:nearest_station]%></div>
                <div class = "genre-search"><%= membership.shop[:genre]%></div>
              </div>
            </div>
            <div class = "follow-button-area">
              <%= link_to "フォローを取消", users_user_memberships_path(membership.shop_id, Membership.find_by(user_id: current_user.id, shop_id: membership.shop_id).id), method: :delete, class: "follow-button" %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
</div>
<%= render partial: "shared/footer" %>