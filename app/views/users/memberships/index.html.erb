<%= render partial: "shared/header" %>
<div class = "header-back"></div>
<div class = "main">
    <div class = "main-wrapper">
      <div class = "shop-following-wrapper">
        <h1>フォロー中のshop一覧</h1>
        <% @shops.each do |shop|  %>
        <div class = "shops">
          <a href = "/users/shops/<%=shop.id%>" ></a>
          <div class = "user-icon">
          <% if shop.image.attached? %>
          <%= image_tag post.image.variant(resize: '80') %>
          <%else%>
          <%= image_tag('no_image.jpeg',size: '80')%>
          <% end %>
          </div>
          <div class = "shop-content">
            <div class = "shop-info-search">
              <h1 class = "shop-name-search"><%= shop.shop_name%></h1>              
            </div>
           <div class = "follow-button-area">
              <%= link_to "フォローを取消", users_user_memberships_path(shop.id, Membership.find_by(user_id: current_user.id, shop_id:shop.id).id), method: :delete, class: "follow-button" %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
</div>
<%= render partial: "shared/footer" %>