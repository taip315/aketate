<%= render partial: "shared/header" %>
<div class = "header-back"></div>
<div class = "reservation-request-error-messages">
  <%= render partial: "shared/error_messages", locals:{model: @request}%>
</div>
<div class = "main-wrapper">
  <table class = "form-table">
  <tbody>
    <%= form_with model:[:users,@shop, @request], local: true do |f| %>
    <tr>
      <th><%= f.label :start_time, '予約時間' %></th><br>
      <td><%= f.datetime_field :start_time %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :number_of_people, '人数' %></th><br>
      <td><%= f.text_field :number_of_people %>人
      </td>
    </tr>
    <tr>
      <th><%= f.label :remarks, '備考' %></th><br>
      <td><%= f.text_area :remarks %>
      </td>
    </tr>
    <tr>
      <td colspan = "2">
        <%= f.submit "送信", class: "submit-btn"%>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
<%= render partial: "shared/footer" %>