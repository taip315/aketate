  <div class = "user-information-area">
    <div class = "user-icon-show"></div>
    <div class = "user-data">
      <h3>shop名</h3>
      <p><%= @shop.shop_name %></p>
      <br>
      <h3>管理者</h3>
      <p><%= @shop.administrator %></p>
      <br>

      <h3>メールアドレス</h3>
