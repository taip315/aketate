<div class = "form-wrapper">
    <%= form_with model: @post, url: shops_posts_path, ralocal: true do |f| %>
      <div class = "field">
      <%= f.label :wine_name, 'ワイン名' %></br>
      <%= f.text_field :wine_name %>
      </div>
      <div class = "field">
      <%= f.label :open_date, '開栓日' %></br>
      <%= f.date_field :open_date %>
      </div>
      <div class = "field">
      <%= f.label :price, '価格' %></br>
      <%= f.text_field :price %>円
      </div>
      <div class = "field">
        <%= f.label :wine_genre, 'お酒の種類' %></br>
        <%= f.collection_select(:wine_genre_id, WineGenre.all, :id, :name) %>
      </div>
      <div class = "field">
        <%= f.label :content, "詳細" %></br>
        <%= f.text_area :content %>
      </div>
      <div class="field", id='tag-field'>
        <%= f.label :name, "タグ" %>
        <%= f.text_field :name, class:"input-tag" %>
      </div>
      <div class = "field">
        <%= f.submit "送信"%>
      </div>
    <% end %>
  </div>